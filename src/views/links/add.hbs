<div id="booking" class="section">
  <div class="section-center">
    <div class="container">
      <div class="row">
        <div class="booking-form">
          <form action="/links/add" method="POST">
            <div class="row">
              <h5 class="badge bg-primary fs-5">DATOS PERSONALES</h5>
              <div class="col-md-6">
                <div class="form-group">
                  <span class="form-label">DAMNIFICADO</span>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Nombre y Apellido"
                  />
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <span class="form-label">DOCUMENTO</span>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="DNI/CUIL"
                  />
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <span class="form-label">EDAD</span>
                  <input class="form-control" type="text" placeholder="Edad" />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <span class="form-label">DOMICILIO</span>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Direccion"
                  />
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <span class="form-label">Fecha de Ingreso</span>
                  <input class="form-control" type="date" />
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <span class="form-label">proximo contacto</span>
                  <input class="form-control" type="date" />
                </div>
              </div>
            </div>
            <div class="row">
              <h5 class="badge bg-primary fs-5">DATOS LABORALES</h5>
              <div class="col-md-6">
                <div class="form-group">
                  <span class="form-label">EMPRESA</span>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Nombre de la Empresa"
                  />
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <span class="form-label">CUIT</span>
                  <input class="form-control" type="text" placeholder="CUIT" />
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <span class="form-label">RUBRO</span>
                  <input class="form-control" type="text" placeholder="Rubro" />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <span class="form-label">DOMICILIO EMPRESA</span>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Direccion de la Empresa"
                  />
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <span class="form-label">HORARIO INGRESO</span>
                  <input class="form-control" type="time" placeholder="CUIT" />
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <span class="form-label">HORARIO EGRESO</span>
                  <input class="form-control" type="time" placeholder="Rubro" />
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <span class="form-label">TURNO</span>
                  <select class="form-control">
                    <option>Mañana</option>
                    <option>Tarde</option>
                    <option>Noche</option>
                  </select>
                  <span class="select-arrow"></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <span class="form-label">TAREAS DEL DAMNIFICADO</span>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Tareas que desemeña el Damnificado en la Empresa"
                  />
                </div>
              </div>
            </div>
            <div class="row">
              <h5 class="badge bg-primary fs-5">INFORMACION MEDICA</h5>
              <div class="col-md-6">
                <div class="form-group">
                  <span class="form-label">ART</span>
                  <select class="form-control">
                    <option>ART 1</option>
                    <option>ART 2</option>
                    <option>ART 3</option>
                  </select>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <span class="form-label">PRESTADOR MEDICO</span>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Prestador Medico"
                  />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <span class="form-label">DOMICILIO ART</span>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Domicilio de ART"
                  />
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <span class="form-label">MAIL ART</span>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Mail de ART"
                  />
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group">
                  <span class="form-label">TELEFONO</span>
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Numero"
                  />
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <div class="form-group">
                  <span class="form-label">Historia Clinica</span>
                  <select class="form-control">
                    <option>Presentada</option>
                    <option>Solicitar</option>
                    <option>No Requiere</option>
                  </select>
                  <span class="select-arrow"></span>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group">
                  <span class="form-label">Estudios Medicos</span>
                  <select class="form-control">
                    <option>Presentados</option>
                    <option>Solicitar</option>
                    <option>No Requiere</option>
                  </select>
                  <span class="select-arrow"></span>
                </div>
              </div>
            </div>
            <div class="row d-flex justify-content-around">

              <div class="col-md-3">
                <div class="form-btn">
                  <button class="submit-btn" role="button">GUARDAR CLIENTE</button>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-btn">
                  <a class="btn submit-btn" href="/profile" role="button">CANCELAR</a>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script> 
<script>
  flatpickr("input[type=time]",{ enableTime: true, noCalendar: true, dateFormat:
  "H:i"});
</script>
